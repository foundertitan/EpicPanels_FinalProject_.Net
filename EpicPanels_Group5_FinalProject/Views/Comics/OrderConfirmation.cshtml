@model EpicPanels_Group5_FinalProject.Models.CheckoutModel

@{
    ViewData["Title"] = "Order Confirmation";
    var subtotal = Model.OrderItems.Sum(item => item.Price * item.Quantity);
    var hst = subtotal * 0.10M;
    var total = subtotal + hst;
}

<div class="container my-5">
    <h1 class="text-center text-success mb-4">Thank You for Your Order!</h1>
    <p class="text-center">Your order has been placed successfully. A confirmation email will be sent to <strong>@Model.Email</strong>.</p>

    <div class="order-summary mt-5">
        <h4>Order Summary</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Comic</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price</td>
                        <td>$@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <p>Subtotal: $@subtotal</p>
            <p>HST (10%): $@hst</p>
            <h5>Total: $@total</h5>
        </div>
    </div>

    <div class="text-end mt-4">
        <a href="/" class="btn btn-primary">Continue Shopping</a>
    </div>
</div>
