@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0">
    <div class="hero-image" style="background: url('/images/hero.webp') center/cover no-repeat; height: 60vh;">
        <div class="d-flex justify-content-center align-items-center h-100">
            <h1 class="text-white display-3 fw-bold text-shadow">Welcome to Epic Panels</h1>
        </div>
    </div>

    <style>
        .text-shadow {
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
            background: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>

    <div class="container py-5">
        <h2 class="text-center mb-4">About Our Store</h2>
        <p class="text-center">
            Epic Panels is your one-stop destination for comic enthusiasts. From the latest superhero adventures to timeless manga classics,
            we offer a wide range of comics, graphic novels, and exclusive merchandise. Whether you're a casual reader or a dedicated collector,
            we aim to bring your favorite stories closer to you.
        </p>
    </div>

    <div class="container py-5">
        <h2 class="text-center mb-4">Visit Our Physical Store</h2>
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <img src="/images/store-location.jpg" alt="Store Location" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <p>
                    Come visit our physical store, located in the heart of the city. Experience the charm of browsing comics in person and connect with other enthusiasts in our welcoming space.
                    Our address is:
                </p>
                <p class="fw-bold">
                    Epic Panels Store<br>
                    299 Doon Valley, Kitchener City, N2W 3U8
                </p>
                <p>
                    We’re open Monday to Saturday, from 10 AM to 8 PM. We look forward to welcoming you!
                </p>
            </div>
        </div>
    </div>
</div>
